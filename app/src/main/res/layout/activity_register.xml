<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/dark_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary_blue"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="50dp"
            android:paddingBottom="40dp">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/logo_spendsense"
                android:contentDescription="@string/app_name" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginTop="12dp" />
        </LinearLayout>

        <!-- Content Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="-20dp"
            android:padding="24dp"
            android:elevation="8dp">

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create Account âœ¨"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start your financial journey today"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="24dp" />

            <!-- Username Field -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ‘¤  Username"
                android:textColor="@color/text_secondary"
                android:textSize="13sp"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@drawable/input_background"
                android:hint="Enter your name"
                android:textColor="@color/text_on_light"
                android:textColorHint="@color/placeholder"
                android:paddingHorizontal="16dp"
                android:layout_marginBottom="16dp"
                android:textSize="15sp"
                android:inputType="textPersonName" />

            <!-- Email Field -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“§  Email"
                android:textColor="@color/text_secondary"
                android:textSize="13sp"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@drawable/input_background"
                android:hint="your@email.com"
                android:inputType="textEmailAddress"
                android:textColor="@color/text_on_light"
                android:textColorHint="@color/placeholder"
                android:paddingHorizontal="16dp"
                android:layout_marginBottom="16dp"
                android:textSize="15sp" />

            <!-- Password Field -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ”’  Password"
                android:textColor="@color/text_secondary"
                android:textSize="13sp"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@drawable/input_background"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="12dp"
                android:layout_marginBottom="16dp">

                <EditText
                    android:id="@+id/password"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="Min. 6 characters"
                    android:inputType="textPassword"
                    android:textColor="@color/text_on_light"
                    android:textColorHint="@color/placeholder"
                    android:background="@android:color/transparent"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/togglePassword"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_eye_closed"
                    android:contentDescription="Toggle Password"
                    android:scaleType="centerInside"
                    android:padding="6dp" />
            </LinearLayout>

            <!-- Confirm Password Field -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ”  Confirm Password"
                android:textColor="@color/text_secondary"
                android:textSize="13sp"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@drawable/input_background"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="12dp"
                android:layout_marginBottom="24dp">

                <EditText
                    android:id="@+id/confirmPassword"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="Re-enter password"
                    android:inputType="textPassword"
                    android:textColor="@color/text_on_light"
                    android:textColorHint="@color/placeholder"
                    android:background="@android:color/transparent"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/toggleConfirmPassword"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_eye_closed"
                    android:contentDescription="Toggle Password"
                    android:scaleType="centerInside"
                    android:padding="6dp" />
            </LinearLayout>

            <!-- Register Button -->
            <Button
                android:id="@+id/registerBtn"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:text="Create Account"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="16sp"
                android:background="@drawable/button_background" />
        </LinearLayout>

        <!-- Login Link -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have an account? "
                android:textColor="@color/text_secondary"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/loginLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login"
                android:textColor="@color/link_blue"
                android:textStyle="bold"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
